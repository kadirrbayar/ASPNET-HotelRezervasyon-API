@model List<RoleAssignDto>
@{
    ViewData["Title"] = "RoleAdd";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Ana Sayfa</a></li>
            <li class="breadcrumb-item active"><a href="#">Rol Atama Paneli</a></li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Kullanıcının Rolleri</h4>
                    <div class="basic-form">
                        <form method="post">
                            <div class="form-group">
                                @for(int i=0;i<Model.Count;i++)
                                {
                                    <div class="form-check mb-3">
                                        <label class="form-check-label">
                                            <input type="hidden" asp-for="@Model[i].UserId"/>
                                            <input type="hidden" asp-for="@Model[i].Id" />
                                            <input type="hidden" asp-for="@Model[i].RoleName" />
                                            <input type="checkbox" class="form-check-input" asp-for="@Model[i].Exist"> @Model[i].RoleName
                                        </label>
                                    </div>
                                }
                            </div>
                            <button type="submit" class="btn btn-sm btn-info">Rolleri Kaydet <span class="btn-icon-right"><i class="fa fa-pencil"></i></span></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

