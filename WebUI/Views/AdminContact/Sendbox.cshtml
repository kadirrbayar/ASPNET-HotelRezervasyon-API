@model List<SendMessageDto>
@{
    ViewData["Title"] = "Sendbox";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Ana Sayfa</a></li>
            <li class="breadcrumb-item active"><a href="#">Giden Kutusu</a></li>
        </ol>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Giden Kutusu</h4>
                    @await Component.InvokeAsync("_contactLeftMenu")
                    <div class="email-right-box">
                        <div role="toolbar" class="toolbar">
                            <div class="btn-group">
                                <button class="btn btn-danger" type="button">
                                    Sil <span class="fa fa-trash m-l-5"></span>
                                </button>
                            </div>
                        </div>
                        <div class="email-list m-t-15">
                            @foreach (var item in Model)
                            {
                                <div class="message">
                                    <a href="/AdminContact/SendboxMessageDetails/@item.Id/">
                                        <div class="col-mail col-mail-1">
                                            <div class="email-checkbox">
                                                <input type="checkbox" id="chk2">
                                                <label class="toggle" for="chk2"></label>
                                            </div><span class="star-toggle ti-star"></span>
                                        </div>
                                        <div class="col-mail col-mail-2">
                                            <p><b>Konu:</b> @item.Subject <b>Alıcı:</b> @item.ReceiverMail <b>Mesaj:</b> @item.Message?.Substring(0, item.Message.Length > 30 ? 30 : 10)...</p>
                                            <div class="date">@(((DateTime)item.Date).ToString("dd-MM-yyyy"))</div>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

