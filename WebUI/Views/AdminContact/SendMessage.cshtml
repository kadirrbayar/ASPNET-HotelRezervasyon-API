@model CreateSendMessageDto
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Ana Sayfa</a></li>
            <li class="breadcrumb-item active"><a href="#">Yeni Mesaj Gönder</a></li>
        </ol>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yeni Mesaj Gönderme Paneli</h4>
                    @await Component.InvokeAsync("_contactLeftMenu")
                    <div class="email-right-box">
                        <form method="post">
                            <div class="compose-content mt-1">
                                <div class="form-group">
                                    <input type="text" class="form-control bg-transparent" asp-for="ReceiverName" placeholder=" Alıcı Adı Soyadı">
                                    <span class="text-danger" asp-validation-for="ReceiverName"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control bg-transparent" asp-for="ReceiverMail" placeholder=" Alıcı Mail Adresi">
                                    <span class="text-danger" asp-validation-for="ReceiverMail"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control bg-transparent" asp-for="Subject" placeholder=" Konu">
                                    <span class="text-danger" asp-validation-for="Subject"></span>
                                </div>
                                <div class="form-group">
                                    <textarea class="textarea_editor form-control bg-light" rows="15" asp-for="Message" placeholder="Mesajınız ..."></textarea>
                                    <span class="text-danger" asp-validation-for="Message"></span>
                                </div>
                            </div>
                            <div class="text-left m-t-15">
                                <button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10" type="submit"><i class="fa fa-paper-plane m-r-5"></i> Mesajı Gönder</button>
                                <a class="btn btn-dark m-b-30 m-t-15 f-s-14 p-l-20 p-r-20" href="/AdminContact/Inbox/"><i class="ti-close m-r-5 f-s-12"></i> Vazgeç</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

