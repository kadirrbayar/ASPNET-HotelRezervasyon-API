@model List<Last6BookingDto>
@{
    int count = 0;
    string color = "";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Ad Soyad</th>
                                    <th>Mail</th>
                                    <th>Giriş Tarihi</th>
                                    <th>Çıkış Tarihi</th>
                                    <th>Durumu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    if (item.Status == "Onaylandı")
                                        color = "gradient-1";
                                    if (item.Status == "İptal Edildi")
                                        color = "gradient-2";
                                    if (item.Status == "Bekleniyor")
                                        color = "gradient-3";
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Name</td>
                                        <td>@item.Mail</td>
                                        <td>@(((DateTime)item.CheckIn).ToString("dd-MMM-yyyy"))</td>
                                        <td>@(((DateTime)item.CheckOut).ToString("dd-MMM-yyyy"))</td>
                                        <td>
                                            <span class="label @color btn-rounded">@item.Status</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
