@model CreateServiceDto

@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Ana Sayfa</a></li>
            <li class="breadcrumb-item active"><a href="#">Hizmet Ekleme Paneli</a></li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yeni Hizmet Ekleme</h4>
                    <div class="basic-form">
                        <form method="post">
                            <br />
                            <label>Başlık</label>
                            <input type="text" asp-for="Title" class="form-control" placeholder="Başlık">
                            <span asp-validation-for="Title" class="text-danger"></span>
                            <br />
                            <label>İkon Url</label>
                            <input type="text" asp-for="Icon" class="form-control" placeholder="İkon Bilgisi">
                            <span asp-validation-for="Icon" class="text-danger"></span>
                            <br />
                            <label>Açıklama</label>
                            <textarea type="text" asp-for="Description" class="form-control" style="height: 100px" placeholder="Açıklama Alanı"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <br />
                            <button type="submit" class="btn btn-outline-info">Ekle</button>
                            <a class="btn btn-outline-dark" href="/AdminServices/Index/">İptal</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


