@model CreateBookingDto
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Rezervasyon Paneli</h6>
            <h1 class="mb-5">Hemen Odanızı <span class="text-primary text-uppercase">Rezerve Edin!</span></h1>
        </div>
        <div class="row g-5">
            <div class="col-lg-6">
                <div class="row g-3">
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.1s" src="~/HotelHome/img/about-1.jpg" style="margin-top: 25%;">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-100 wow zoomIn" data-wow-delay="0.3s" src="~/HotelHome/img/about-2.jpg">
                    </div>
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-50 wow zoomIn" data-wow-delay="0.5s" src="~/HotelHome/img/about-3.jpg">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.7s" src="~/HotelHome/img/about-4.jpg">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="wow fadeInUp" data-wow-delay="0.2s">
                    <form method="post" asp-action="AddBooking" asp-controller="Booking">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" asp-for="Name" placeholder="Ad Soyad">
                                    <label for="name">Ad Soyad</label>
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control" asp-for="Mail" placeholder="Mail">
                                    <label for="email">Mail</label>
                                    <span class="text-danger" asp-validation-for="Mail"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating date" id="date3" data-target-input="nearest">
                                    <input type="date" class="form-control" asp-for="CheckIn" placeholder="Giriş Tarihi" data-target="#date3" data-toggle="datetimepicker" />
                                    <label for="checkin">Giriş Tarihi</label>
                                </div>
                                <span class="text-danger" asp-validation-for="CheckIn"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating date" id="date4" data-target-input="nearest">
                                    <input type="date" class="form-control" asp-for="CheckOut" placeholder="Çıkış Tarihi" value="@DateTime.Now.ToString("dd-MMM-yyyy")" data-target="#date4" data-toggle="datetimepicker" />
                                    <label for="checkout">Çıkış Tarihi</label>
                                </div>
                                <span class="text-danger" asp-validation-for="CheckOut"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select class="form-select" asp-for="AdultCount">
                                        <option value="1">1 Yetişkin</option>
                                        <option value="2">2 Yetişkin</option>
                                        <option value="3">3 Yetişkin</option>
                                        <option value="4">4 Yetişkin</option>
                                    </select>
                                    <label for="select1">Yetişkin Sayısı</label>
                                </div>
                                <span class="text-danger" asp-validation-for="AdultCount"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select class="form-select" asp-for="ChildCount">
                                        <option value="1">1 Çocuk</option>
                                        <option value="2">2 Çocuk</option>
                                        <option value="3">3 Çocuk</option>
                                        <option value="4">4 Çocuk</option>
                                    </select>
                                    <label for="select2">Çocuk Sayısı</label>
                                </div>
                                <span class="text-danger" asp-validation-for="ChildCount"></span>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <select class="form-select" asp-for="RoomCount">
                                        <option value="1">1 Oda</option>
                                        <option value="2">2 Oda</option>
                                        <option value="3">3 Oda</option>
                                    </select>
                                    <label for="select3">Oda Sayısı</label>
                                </div>
                                <span class="text-danger" asp-validation-for="RoomCount"></span>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Özel İstekleriniz" asp-for="SpecialRequest" style="height: 100px"></textarea>
                                    <label for="message">Notlar</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Rezervasyon Yap</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>